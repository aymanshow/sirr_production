        <record id="test_sign_in_at_time" model="hr.aa.action_reason_rule">
            <field name="name">hr.test Sign In - At time</field>
            <field name="action" ref="test_at_time_in"/>
            <field name="rule">
	    lambda att: (
		att.turn_start and
		dt(att.turn_start) - timedelta(hours=1) &lt; dt(att.datetime) and
		dt(att.datetime) &lt; dt(att.turn_start) + timedelta(minutes=15)
	    )
            </field>
            <field name="seq">10</field>
            <field name="active">True</field>
        </record>

