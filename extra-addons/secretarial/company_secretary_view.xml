            <record id="base.view_res_partner_filter" model="ir.ui.view">
            <field name="name">res.partner.select</field>
            <field name="model">res.partner</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Partner">
                   <group col='10' colspan='4'>
                        <filter string="Non-Individuals" name="customer" icon="terp-personal" domain="[('current_cat','!=','Individual')]" help="Non-Individuals"/>
                        <filter string="Individuals" name="supplier" icon="terp-personal" domain="[('current_cat','=','Individual')]" help="Individuals"/>
                        <newline/>
                        <filter string="GBC 1" name="gbc1" icon="terp-personal" domain="[('current_cat','=','GBC 1')]" help="GBC 1"/>
                        <filter string="GBC 2" name="gbc2" icon="terp-personal" domain="[('current_cat','=','GBC 2')]" help="GBC 2"/>
                        <filter string="Trust" name="trust" icon="terp-personal" domain="[('current_cat','=','Trust')]" help="Trust"/>
                        <filter string="Foreign" name="foreign" icon="terp-personal" domain="[('current_cat','=','Foreign')]" help="Foreign"/>
                        <filter string="Domestic" name="domestic" icon="terp-personal" domain="[('current_cat','=','Domestic')]" help="Foreign"/>
                        
                        <newline/> 
                        <field name="name" select="1"/>
                        <field name="address" select="1"/>
                        <field name="country" select="1"/>
                        <field name="category_id" select="1"/>
                        <field name="user_id" string="Account Executive" select="1">
                            <filter domain="[('user_id','=',False)]" context="{'search_default_user_id':uid}" help="Unassigned Entities" icon="terp-personal-" separator="1"/>
                        </field>
                   </group>
                   <newline />
                   <group expand="0" string="Group By...">
                       <filter string="Executive" icon="terp-personal" domain="[]" context="{'group_by' : 'user_id'}" />
                   </group>
               </search>
            </field>
        </record>


        <record id="base.view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="type">tree</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Partners">
                    <field name="name"/>
                    <field name="current_cat"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="city"/>
                    <field name="country"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <record id="base.view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Partners" col="1">
                <group col="8">
                    <group col="4">
                        <field name="name" select="1" colspan="4"/>
                        <field name="current_lob"/> 
                        <field name="status"/> 
                    </group>
                    <group col="4">
                        <field name="current_nature"/>
                        <field name="current_cat"/>
                        <field name="current_entity"/>
                        <field name="current_turnover"/>
                        <field name="last_fsc_filing"/>
                    </group>
                </group>
                
                    <notebook>
                        <page string="Profile">
                        <group col="4">
                        <group col="2" colspan="2">
                                <field name="title" string="Title" widget="selection"/>
                                <field name="ref_no"/>
                                <field name="licence_number" /> 
                                <field name="id_number" />
                                <field name="tan"/> 
                                <field name="brn" />
                                <field name="currency_id"/>
                        </group>
                        <group col="2" colspan="2">
                                <field name="npf"/>  
                                <field name="paye"/>
                                <field name="dob" />
                                <field name="date_agm"/> 
                                <field name="lic_expiry" string="Licence Exp."/>
                        </group>
                        </group>
                        <group colspan="3">
                                <field mode="tree" name="kyc_ids" nolabel="1" select="1"  editable="top">
                                    <tree string="KYC" editable="Top">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="expiry"/>
                                    <field name="status"/>
                                    </tree>
                                </field>
                        </group>
                        <newline/>    
                        <group>
                        <field colspan="2" mode="tree,form" name="address" nolabel="1" select="1" >
                                                <form string="Addresses">
                                                    <group>
                                                        <separator string="Postal Address"/>
                                                        <field name="type" string="Type"/>
                                                        <field name="street" />
                                                        <field name="street2" />
                                                        <field name="zip"/>
                                                        <field name="city"/>
                                                        <field name="country_id" completion="1"/>
                                                        <field name="state_id"/>
                                                    </group>
                                                    <group>
                                                        <separator string="Communication" colspan="2" col="2"/>
                                                        <field name="phone"/>
                                                        <field name="mobile"/>
                                                        <field name="fax"/>
                                                        <field name="email" widget="email"/>
                                                        <field name="effective_date" />
                                                    </group>
                                                </form>
                                                <tree string="Addresses">
                                                    <field name="type" string="Type"/>
                                                    <field name="street"/>
                                                    <field name="street2"/>
                                                    <field name="country_id"/>
                                                    <field name="phone"/>
                                                    <field name="email"/>
                                                    <field name="effective_date" />
                                                </tree>
                           </field>
                           </group>  
                           <field colspan="1" mode="tree,form" name="treaty_ids" nolabel="1" select="1"  editable="top">
                                <tree string="Treaty Countries" editable="Top">
                                    <field name="country"/>
                                    <field name="expiry_date"/>
                                </tree>
                           </field>
                           <group col="1">
                           <button colspan="1" icon="gtk-ok" string="Directors" name="%(_directors_sidebar)d" type="action"/>
                           <button colspan="1" icon="gtk-ok" string="Shareholders" name="%(_shareholders_sidebar)d" type="action"/>
                           <button colspan="1" icon="gtk-ok" string="3rd parties" name="%(_3rd_parties_sidebar)d" type="action"/>
                           </group>
                        </page>
                        <page string="Relations">
                            <field colspan="8" name="referral"/>
                            <field colspan="4" mode="tree,form" name="relation_ids" nolabel="1" select="1">
                                <tree string="Relations" editable="top">
                                    <field name="type" widget="selection"/>
                                    <field name="relative" />
                                    <field name="appoint_date"/>
                                    <field name="resign_date"/>
                                </tree>
                            </field>

                            <field colspan="4" mode="tree,form" name="shareholder_ids" nolabel="1" select="1" >
                                <tree string="Shareholders" editable="top" >
                                    <field name="name" colspan="3"/>
                                    <field name="type" widget="selection"/>
                                    <field name="num_shares"/>
                                    <field name="distinct_start_number" on_change="onchange_distinct_start_number(distinct_start_number)"/>
                                    <field name="distinct_end_number"/>
                                    <field name="certificate_number"/>
                                    <field name="share_holding_perc"/>
                                    <field name="par_value"/>
                                    <field name="value"/>
                                    <field name="country_id"/>
                                    <field name="opened_date"/>
                                    <field name="modified_date"/>
                                    <field name="status"/>

                                </tree>
                              </field>

                            <field colspan="4" mode="tree,form" name="ownership_ids" nolabel="1" select="1" >
                                <tree string="Ownership" editable="top" >
                                    <field name="name" colspan="3"/>
                                    <field name="type" />
                                    <field name="share_holding_perc"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Account">
                        <group colspan="8">
                            <field name="accounting_year_end"/>
                        </group>
                          
                        <field mode="tree" name="aps_ids" nolabel="1" select="1" editable="top" colspan="4">
                                <tree string="Tax Return" editable="Top">
                                <field name="name"/>
                                <field name="start_period"/>
                                <field name="end_period"/>
                                <field name="due_date"/>
                                </tree>
                             </field>
                        <field mode="tree" name="fsc_filing_ids" nolabel="1" select="1" editable="top" colspan="4">
                                <tree string="FSC Filing" editable="Top">
                                <field name="name"/>
                                <field name="filing_date"/>
                                </tree>
                             </field>

                        <field mode="tree" name="turnover_ids" nolabel="1" select="1" editable="top" colspan="4">
                                <tree string="Turnover" editable="Top">
                                <field name="amount"/>
                                <field name="record_date"/>
                                </tree>
                        </field>                                              
                            <field mode="tree" name="signatory_ids" colspan="4" nolabel="1" >
                                <tree string="Bank Accounts" editable="top">
                                    <field name="signatory"/>
                                    <field name="bank_id" on_change="onchange_bank_id(bank_id)"/>
                                    <field name="bank"/>
                                    <field name="currency"/>
                                    <field name="group"/>
                                    <field name="mode_operation"/>
                                    <field name="date_opened"/>
                                    <field name="date_closed"/>
                                </tree>
                            </field>
                        
                            <!--<field mode="tree" name="fees_ids" editable="top" colspan="4" nolabel="1" >
                                <tree string="Invoices" editable="Top">
                                    <field name="name"/>
                                    <field name="currency"/>
                                    <field name="amount"/>
                                    <field name="invoice_date"/>
                                    <field name="paid_date"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                            -->

                        </page>

                        <page string="Info">
                                    <group colspan="3" col="1" string="Entity">
                                        <field mode="tree" name="entity_ids" nolabel="1" select="1"  editable="top">
                                            <tree string="Entity" editable="Top">
                                            <field name="type" widget="selection"/>
                                            <field name="effective_date"/>
                                            </tree>
                                        </field>
                                    </group>

                                    <group colspan="3" col="1" string="Nature">
                                        <field mode="tree" name="nature_ids" nolabel="1" select="1"  editable="top">
                                            <tree string="Nature" editable="Top">
                                            <field name="name" widget="selection"/>
                                            <field name="effective_date"/>
                                            </tree>
                                        </field>
                                    </group>

                                    <group colspan="3" col="1" string="Category">
                                        <field mode="tree" name="cat_ids" nolabel="1" select="1"  editable="top">
                                            <tree string="Category" editable="Top">
                                            <field name="name" widget="selection"/>
                                            <field name="effective_date"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group colspan="3" col="1" string="Type">
                                        <field mode="tree" name="type_ids" nolabel="1" select="1"  editable="top">
                                            <tree string="Type" editable="Top">
                                            <field name="name" widget="selection"/>
                                            <field name="effective_date"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group colspan="3" col="1" string="Line of Business">
                                        <field mode="tree,form" name="lob_ids" nolabel="1" select="1"  editable="top">
                                        </field>
                                    </group>


                                    <group colspan="3" col="1" string="Name Change History">
                                        <field mode="tree" name="name_ids" nolabel="1" select="1"  editable="top">
                                            <tree string="Names" editable="Top">
                                            <field name="name"/>
                                            <field name="effective_date"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group colspan="3" col="1" string="Contracts">
                                    <field colspan="3" mode="tree,form" name="contract_ids" nolabel="1" select="1"  editable="top">
                                    <tree string="Contracts" editable="Top">
                                        <field name="name"/>
                                        <field name="approved_date"/>
                                        <newline/>
                                        <field name="tc"/>
                                    </tree>
                                    <form string="Contracts">
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="approved_date"/>
                                        <newline/>
                                        <separator string="Terms and Conditions" colspan="4"/>
                                        <field name="tc" colspan="4" nolabel="1"/>
                                    </form>
                               </field>
                            </group>
                        </page>

                        <page string="History" groups="base.group_extended">
                        </page>
                        <page string="Sales &amp; Purchases">
                            <group string="General Information" col="2">
                                <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                                <field name="active" groups="base.group_extended"/>
                                <field name="website" widget="url"/>
                                <field name="date" string="Date Introduced"/>
                                <field name="parent_id" groups="base.group_extended"/>
                                <field name="user_id" string="Account Executive"/>
                                <newline/>
                             </group>
                        </page>
                        <page string="Notes">
                            <field colspan="2" name="comment" nolabel="1"/>
                        </page>
                        <page string="Reminders"> 
                            <field name="reminder_ids" mode="tree" colspan="4" nolabel="1" context="{'default_partner_id': active_id}">
                            </field>                  
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
              
